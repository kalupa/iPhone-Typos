<h1>iPhone Typos</h1>

<% @typos.each do |typo| %>
	Avg. rating: <%= typo.average_rating_round %><br />
	<%= simple_format(typo.html) %>
	Rate it: <% 1.upto(4) do |rating| %>
		<%= link_to rating, :action => "rate", :id => typo, :rating => rating %>
	<% end -%>
	<hr />
<% end %>

<%= link_to 'New typo', new_typo_path %>